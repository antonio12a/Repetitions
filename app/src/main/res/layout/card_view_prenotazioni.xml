<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/touch_layout"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titolo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:layout_alignParentEnd="true"
                android:layout_marginStart="204dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="30dp"
                android:text="Informatica"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomeDoc"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titolo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="207dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="31dp"
                android:text="Mario Rossi"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/stato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="151dp"
                android:layout_marginEnd="277dp"
                android:text="Prenotata"
                android:textColor="#09AF00" />

            <TextView
                android:id="@+id/ora"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="205dp"
                android:layout_marginTop="82dp"
                android:layout_marginEnd="25dp"
                android:text="MartedÃ¬ 18:00/20:00"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageCorso"
                android:layout_width="153dp"
                android:layout_height="117dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/informatica_corso" />

            <Button
                android:id="@+id/buttonCardPrenotazione"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="78dp"
                android:text="prenota" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

