<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/touch_layoutCorso"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titoloCorso"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:layout_alignParentEnd="true"
                android:layout_marginStart="204dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="30dp"
                android:text="Informatica"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nomeDocCorso"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titoloCorso"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="207dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="31dp"
                android:text="Mario Rossi"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/oraCorso"
                android:layout_width="168dp"
                android:layout_height="46dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="205dp"
                android:layout_marginTop="82dp"
                android:layout_marginEnd="25dp"
                android:text="MartedÃ¬ 18:00/20:00"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageViewCorso"
                android:layout_width="153dp"
                android:layout_height="117dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/informatica_corso" />

            <Button
                android:id="@+id/buttonPrenota"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="27dp"
                android:layout_marginBottom="17dp"
                android:text="prenota" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>